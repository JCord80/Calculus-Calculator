answer.pack()

frame2.pack(side = tk.LEFT)


frame3.pack(side=tk.LEFT)
label3.pack()



b = [butparenleft, butfunc, butgraph, butclear, butdiv, butx, but1, but2, but3, butmult, buty, but4, but5, but6, butsubtr,butperiod, but7, but8, but9, butadd,bute, butw, but0, butd, ent]
i = 0
for k in range(5):
    for c in range(5):
        b[i].grid(row = k, column = c, sticky = "nsew")
        i += 1



